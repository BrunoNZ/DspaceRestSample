<h1>Dspace Items</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dspace_items.each do |dspace_item| %>
      <tr>
        <td><%= link_to dspace_item.name,
                  dspace_item_path(dspace_item.id),
                  class: 'btn btn-default' %>
        </td>

        <td><%= link_to 'Edit',
                  edit_dspace_item_path(dspace_item.id),
                  class: 'btn btn-primary' %>
        </td>

        <td><%= link_to 'Destroy',
                  dspace_item_path(dspace_item.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dspace Item', new_dspace_item_path, class: 'btn btn-success' %>
