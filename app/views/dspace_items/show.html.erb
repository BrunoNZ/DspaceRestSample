<p id="notice"><%= notice %></p>

<h1><%= @dspace_item.name %></h1>
<%= link_to 'Edit', edit_dspace_item_path(@dspace_item) %> |
<%= link_to 'Back', dspace_items_path %>

<p><%= image_tag(get_thumbnail(@dspace_item)) %></p>

<p><h3>Author:</h3> <%= get_value_of(@dspace_item_metadata, "dc.contributor") %></p>
<p><h3>Abstract:</h3> <%= get_value_of(@dspace_item_metadata, "dc.description.abstract") %></p>

<h2>Bitstreams in this item</h2>
<ul>
<% @dspace_bitstreams.each do |dspace_bitstream| %>
  <li><%= link_to dspace_bitstream.name, dspace_bitstream_path(dspace_bitstream.id) %></li>
<% end %>
</ul>
