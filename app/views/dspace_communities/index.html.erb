<p id="notice"><%= notice %></p>

<h1>Dspace Communities</h1>

<%= link_to 'Criar comunidade', new_dspace_community_path %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dspace_communities.each do |dspace_community| %>
      <tr>
        <td><%= link_to dspace_community.name, dspace_community_path(dspace_community.id) %></td>
        <td><%= link_to 'Edit', edit_dspace_community_path(dspace_community.id) %></td>
        <td><%= link_to 'Destroy', dspace_community_path(dspace_community.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

