<%= simple_form_for :user, url: url, method: method do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.email_field :email %>
    <%= f.password_field :password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
